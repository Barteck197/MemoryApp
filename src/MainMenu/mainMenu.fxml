<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="MainMenu.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Button text="Start" onMouseClicked="#startTime" GridPane.rowIndex="0" alignment="CENTER"/>

    <Button text="Go to the other scene" onAction="#addScene" GridPane.rowIndex="1"/>

    <Label text="Current time:" GridPane.rowIndex="2" alignment="CENTER"/>

    <Label fx:id="appTime" text="00:00" GridPane.rowIndex="3" alignment="CENTER"/>

</GridPane>