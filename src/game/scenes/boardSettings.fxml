<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" prefHeight="300.0" prefWidth="400.0" stylesheets="@../css/stylesheet.css" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.Controller">

    <Label fx:id="boardWindowTitle" text="Choose board dimensions: " GridPane.rowIndex="0" />

    <GridPane alignment="CENTER" hgap="10" GridPane.rowIndex="1">
        <Label text="rows:" GridPane.columnIndex="0" />
        <TextField fx:id="rows"  prefWidth="30.0" GridPane.columnIndex="1" />
        <Label text="columns:" GridPane.columnIndex="2" />
        <TextField fx:id="columns" prefWidth="30.0" GridPane.columnIndex="3" />

    </GridPane>

    <Button text="Start" fx:id="startGameButton" GridPane.halignment="CENTER" prefWidth="100" GridPane.rowIndex="2" />

    <Button onAction="#backToMenu" text="Back" GridPane.halignment="CENTER" prefWidth="100" GridPane.rowIndex="3" />

</GridPane>
