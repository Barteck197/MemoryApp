<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="game.BoardController" fx:id="boardWindow">
    <center>
        <Pane fx:id="gameBoard"/>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="50.0">
            <Text fx:id="appTime" text="00:00">
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Text>
            <Button text="save" onMouseClicked="#endGame"/>
            <Button text="exit" onMouseClicked="#exitApp"/>
        </HBox>
    </bottom>
</BorderPane>
